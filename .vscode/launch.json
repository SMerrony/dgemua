    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) VSEMUA Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vsemua",
            "args": ["-pr", "PROGRAMS/GAMES/CLI32.PR", "-root", "."],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) VSEMUA Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/obj/driver/test_runner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/obj/driver",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) MVEMUA Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/mvemua",
            "args": ["-do", "SCRIPTS/DEBUG.DO"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}